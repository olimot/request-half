{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false
  },
  "exclude": ["lib/**/*.ts", "**/*.spec.ts"]
}
